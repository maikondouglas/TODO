<%= form_with(model: task) do |form| %>
  <%= form.hidden_field :parent_id, value: task.parent_id || params[:parent_id] %>

  <div class="mb-3">
    <%= form.label :description, style: "display: block", class: 'form-label' %>
    <%= form.text_field :description, class: 'form-control'  %>
  </div>

  <div class="mb-3">
    <%= form.label :due_date, style: "display: block", class: 'form-label' %>
    <%= form.date_field :due_date %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box :done, class: 'form-check-input' %>
    <%= form.label :done, style: "display: block", class: 'form-check-label' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>

  <%= link_to "Cancelar", tasks_path, class: 'btn btn-light' %>
<% end %>
